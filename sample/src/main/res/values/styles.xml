<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--<item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>-->
    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="MainButton" parent="MatchWrapParent">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HomeRadioButton" parent="ZeroMatchParent">
        <item name="android:padding">2dp</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/base_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/base_dialog_exit_anim</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ImageViewThree">
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="HomeInformationListLittleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">6.5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomeInformationListLittleTextTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomeInformationListLittleImage">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="HomeInformationListTitleText">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="HomeInforListLine" parent="ViewLine">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
</resources>
